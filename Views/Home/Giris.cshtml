@model User
<section class="book_section layout_padding text-center">
    <div class="container">
            <h1 style="color: #ffc107;">
            Gider takip uygulamasına hoş geldiniz!
            </h1>
        @if (ViewBag.AuthError != null)
        {
            <div class="alert alert-danger mb-3" role="alert">
                @ViewBag.AuthError
            </div>
        }
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="form_container">
                    <form id="registrationForm" method="post" action="/home/giris" autocomplete="off">
                        <div>
                            <input type="text" name="Email" class="form-control" placeholder="Email" />
                        </div>
                        <div>
                            <input type="password" name="Password" class="form-control" placeholder="Şifre" />
                        </div>
                        <div class="btn_box">
                            <button type="submit" class="btn btn-primary">
                                Giriş
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

